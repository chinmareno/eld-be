# Django runtime
DJANGO_SECRET_KEY=change-this-in-production
DJANGO_DEBUG=False

# Comma-separated hosts/origins (no spaces required)
DJANGO_ALLOWED_HOSTS=api.example.com,example.com
DJANGO_CORS_ALLOWED_ORIGINS=https://app.example.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://app.example.com
DJANGO_CORS_ALLOW_CREDENTIALS=True

# JWT cookie settings (for cookie auth)
# Production with HTTPS should use Secure=True.
DJANGO_JWT_COOKIE_SECURE=True
# Use "Lax" when frontend and backend share same site.
# Use "None" only when truly cross-site and always with Secure=True.
DJANGO_JWT_COOKIE_SAMESITE=Lax
