# Django runtime
DJANGO_SECRET_KEY=change-this-in-production
DJANGO_DEBUG=False
# Optional for SQLite on a mounted Zeabur volume
# DJANGO_SQLITE_PATH=/data/db.sqlite3

# Hosts / CORS / CSRF
DJANGO_ALLOWED_HOSTS=api.example.com,example.com,.zeabur.app
DJANGO_CORS_ALLOWED_ORIGINS=https://app.example.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://app.example.com,https://*.zeabur.app
DJANGO_CORS_ALLOW_CREDENTIALS=True
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SESSION_COOKIE_SECURE=True
DJANGO_CSRF_COOKIE_SECURE=True

# JWT cookie settings
DJANGO_JWT_COOKIE_SECURE=True
DJANGO_JWT_COOKIE_SAMESITE=Lax

# OpenRouteService (routing)
ORS_API_KEY=replace-with-openrouteservice-api-key
ORS_DIRECTIONS_PROFILE=driving-hgv
ORS_BASE_URL=https://api.openrouteservice.org
ORS_SNAP_RADIUS_METERS=5000
ROUTING_USER_AGENT=spotter-eld/1.0

# Nearby POI search (fuel / parking / rest area)
POI_BASE_URL=https://overpass-api.de/api/interpreter
POI_USER_AGENT=spotter-eld/1.0
POI_DEFAULT_RADIUS_KM=15
POI_DEFAULT_LIMIT_PER_CATEGORY=3
